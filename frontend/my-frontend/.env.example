# Variables de entorno para FRONTEND
# Copia este archivo como .env.local en la raíz del frontend

# URL del backend (DESARROLLO)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3007

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET="tu_nextauth_secret_aqui_cambiar_en_produccion"

# Azure AD (opcional - completar si se usa)
AZURE_AD_CLIENT_ID="tu_client_id"
AZURE_AD_CLIENT_SECRET="tu_client_secret"
AZURE_AD_TENANT_ID="tu_tenant_id"

# Configuración de desarrollo
NEXT_PUBLIC_APP_MODE=development
NEXT_PUBLIC_DEBUG=true