# Configuración para DESARROLLO LOCAL con SQLite
# Copia este archivo como .env en la raíz del backend para desarrollo local

# Base de datos SQLite local
DATABASE_URL="file:./dev.db"

# Puerto del servidor backend
PORT=3007

# Modo desarrollo con SQLite
NODE_ENV=development
MOCK_MODE=false

# Configuración de red
HOST=0.0.0.0

# Debug activado para desarrollo
DEBUG_MODE=true